{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "target": "es2020",
        "outDir": "out",
        "lib": ["es6", "es2018", "ES2019", "ES2020", "ES2022"],
        "sourceMap": true,
        "rootDir": "src",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "strictPropertyInitialization": false,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules", ".vscode-test", ".vscode test", "build", "out"]
}
